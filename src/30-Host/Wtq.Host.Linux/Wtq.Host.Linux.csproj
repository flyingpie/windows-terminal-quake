<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<AssemblyName>wtq</AssemblyName>
		<RootNamespace>Wtq.Host.Linux</RootNamespace>

		<TargetFramework>net9.0</TargetFramework>
		<OutputType>Exe</OutputType>

		<IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\10-Core\Wtq\Wtq.csproj"/>
		<ProjectReference Include="..\..\20-Services\Wtq.Services.KWin\Wtq.Services.KWin.csproj"/>
		<ProjectReference Include="..\..\20-Services\Wtq.Services.Linux\Wtq.Services.Linux.csproj" />
		<ProjectReference Include="..\..\20-Services\Wtq.Services.TrayIcon\Wtq.Services.TrayIcon.csproj"/>
		<ProjectReference Include="..\Wtq.Host.Base\Wtq.Host.Base.csproj"/>
	</ItemGroup>

	<ItemGroup Condition=" '$(Configuration)' == 'Debug' ">
		<None Update="wtq.jsonc">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<!--
		Copy static asses for the UI over, which we need to do manually due to our slightly non-conventional setup,
		of having the UI in a library, and the main app not being a web app.
	-->
	<ItemGroup>
		<BlazorStaticAssets Include="../../20-Services/Wtq.Services.UI/wwwroot/**/*"/>
	</ItemGroup>

	<!-- Build: For when we're directly running the project, which includes debugging. -->
	<Target Name="CopyBlazorAssetsBuild" AfterTargets="Build">
		<Copy
			SourceFiles="@(BlazorStaticAssets)"
			DestinationFolder="$(OutputPath)wwwroot/%(RecursiveDir)"
			SkipUnchangedFiles="true"
		/>
	</Target>

	<!-- Publish: For when we're making artifacts to be packaged. -->
	<Target Name="CopyBlazorAssetsPublish" AfterTargets="Publish">
		<Copy
			SourceFiles="@(BlazorStaticAssets)"
			DestinationFolder="$(PublishDir)wwwroot/%(RecursiveDir)"
			SkipUnchangedFiles="true"/>
		<RemoveDir Directories="$(PublishDir)wwwroot/_content/Wtq.Services.UI"/>
	</Target>

</Project>