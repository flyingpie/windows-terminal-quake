@inherits BaseSetting

<RadzenRow AlignItems="AlignItems.Start">
	<SettingLabel Text="Window title" Component="@_id" Subtext="optional"/>
	<RadzenColumn Size="7">
		<RadzenTextBox @bind-Value="AppOpts.WindowTitle" Name="@_id" style="width: 100%;"/>

		<Descr>
			Additionally uses the window title to filter app.<br/>
			Can be useful for attaching to e.g. a browser window.
		</Descr>
	</RadzenColumn>
	<SettingGlobal/>
</RadzenRow>