@inherits BaseSetting

@code {

	public AnimationType AnimationTypeToggleOff
	{
		get => AppOpts.AnimationTypeToggleOff ?? GlobalOpts.AnimationTypeToggleOff;
		set => AppOpts.AnimationTypeToggleOff = value;
	}

}

<RadzenRow AlignItems="AlignItems.Start">
	<SettingLabel Text="Animation type (toggle off)"/>
	<RadzenColumn Size="7">
		<RadzenRadioButtonList @bind-Value="AnimationTypeToggleOff" TValue="AnimationType" Orientation="Orientation.Vertical">
			<Items>

				@foreach (var func in WtqConstants.AnimationTypes)
				{
					<RadzenRadioButtonListItem Value="@func" Text="@(func.GetDisplayDescription())" />
				}

			</Items>
		</RadzenRadioButtonList>

		<Descr>The easing type to use when moving the app <Emph>off</Emph> the screen.</Descr>
	</RadzenColumn>
	<SettingGlobal
		HasGlobalSetting="true"
		IsOverridden="@(AppOpts.AnimationTypeToggleOff != null)"
		Reset="@(() => AppOpts.AnimationTypeToggleOff = null)"
	/>
</RadzenRow>