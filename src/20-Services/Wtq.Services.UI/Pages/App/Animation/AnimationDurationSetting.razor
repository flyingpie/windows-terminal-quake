@inherits BaseSetting

@code {

	public int AnimationDurationMs
	{
		get => AppOpts.AnimationDurationMs ?? GlobalOpts.AnimationDurationMs;
		set => AppOpts.AnimationDurationMs = value;
	}

}

<RadzenRow AlignItems="AlignItems.Start">
	<SettingLabel Text="Animation duration"/>
	<RadzenColumn Size="7">
		<RadzenNumeric @bind-Value="AnimationDurationMs" class="rz-mr-4" style="width: 80px;"/>
		<RadzenSlider @bind-Value="AnimationDurationMs" TValue="int" Min="0" Max="1000" Step="5" />

		<Descr>How long it should take for the app to toggle onto or -off the screen.</Descr>
	</RadzenColumn>
	<SettingGlobal
		HasGlobalSetting="true"
		IsOverridden="@(AppOpts.AnimationDurationMs != null)"
		Reset="@(() => AppOpts.AnimationDurationMs = null)"
	/>
</RadzenRow>