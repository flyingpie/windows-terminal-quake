@inherits BaseSetting

@code {

	public int Opacity
	{
		get => AppOpts.Opacity ?? GlobalOpts.Opacity;
		set => AppOpts.Opacity = value;
	}

}

<RadzenRow AlignItems="AlignItems.Start">
	<SettingLabel Text="Opacity"/>
	<RadzenColumn Size="7">
		<RadzenNumeric @bind-Value="Opacity" class="rz-mr-4" style="width: 80px;"/>
		<RadzenSlider @bind-Value="Opacity" TValue="int"/>

		<Descr>Makes the entire app window transparent. Note that this includes the title bar.</Descr>
	</RadzenColumn>
	<SettingGlobal
		HasGlobalSetting="true"
		IsOverridden="@(AppOpts.Opacity != null)"
		Reset="@(() => AppOpts.Opacity = null)"
	/>
</RadzenRow>