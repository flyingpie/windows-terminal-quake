@inherits SettingX<ICollection<HotkeyOptions>>

@code {

	// public ICollection<HotkeyOptions> Hotkeys { get; set; }

	private void OnRemove(HotkeyOptions hk)
	{
		AppOpts.Hotkeys.Remove(hk);

		StateHasChanged();
	}

}

<SettingY>
	<RadzenStack>

		@foreach (var hk in Prop)
		{
			<Hotkey Options="hk" OnRemove="@(() => OnRemove(hk))"/>
		}

		<RadzenStack>
			<RadzenButton
				Icon="add"
				Size="ButtonSize.Medium"
				Click="@(() => AppOpts.Hotkeys.Add(new()))"
			/>
		</RadzenStack>

	</RadzenStack>
</SettingY>