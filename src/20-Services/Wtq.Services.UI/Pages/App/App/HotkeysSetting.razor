@inherits BaseSetting

@code {
	private void OnRemove(HotkeyOptions hk)
	{
		AppOpts.Hotkeys.Remove(hk);

		StateHasChanged();
	}
}

<RadzenRow AlignItems="AlignItems.Start">
	<SettingLabel Text="Hotkeys"/>
	<RadzenColumn Size="7">

		<RadzenStack>

			@foreach (var hk in AppOpts.Hotkeys)
			{
				<Hotkey Options="hk" OnRemove="@(() => OnRemove(hk))" />
			}

			<RadzenStack>
				<RadzenButton
					Icon="add"
					Size="ButtonSize.Medium"
					Click="@(() => AppOpts.Hotkeys.Add(new()))"
				/>
			</RadzenStack>
		</RadzenStack>

		<Descr>What hotkey(s) should toggle the app.</Descr>
	</RadzenColumn>
</RadzenRow>