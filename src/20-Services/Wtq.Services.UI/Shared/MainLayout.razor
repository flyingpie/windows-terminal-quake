@inherits LayoutComponentBase

<RadzenComponents/>

<RadzenLayout>
	<RadzenSidebar>
		<RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween" style="height: 100%;">
			<LeftNav/>

			<RadzenStack AlignItems="AlignItems.Center" class="rz-mb-4" Gap="8">
				<RadzenButton Variant="Variant.Text" Size="ButtonSize.Small" Click="@(() => Os.OpenUrl(WtqConstants.DocumentationUrl))">Docs</RadzenButton>
				<RadzenButton Variant="Variant.Text" Size="ButtonSize.Small" Click="@(() => Os.OpenUrl(WtqConstants.GitHubUrl))">GitHub</RadzenButton>

				<div class="rz-color-base-500 rz-mt-2">WTQ @WtqConstants.AppVersion</div>
			</RadzenStack>
		</RadzenStack>
	</RadzenSidebar>
	<RadzenBody>
		<div class="rz-p-4">
			<RadzenRow>
				<RadzenColumn OffsetLG="2" SizeLG="8">
					@Body
				</RadzenColumn>
			</RadzenRow>
		</div>
	</RadzenBody>

</RadzenLayout>

<style>
	body {
		background: #19191a;
	}
</style>