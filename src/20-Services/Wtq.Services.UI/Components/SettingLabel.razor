@using System.Linq.Expressions
@code {

	[Parameter]
	public string? Text { get; set; }

	[Parameter]
	public string? Subtext { get; set; }

	// [Parameter]
	// public string? Component { get; set; }

	[Parameter]
	public Expression<Func<WtqAppOptions, object>> Component { get; set; }

	[CascadingParameter]
	public WtqAppOptions AppOpts { get; set; } = null!;

	private string LabelClass
		=> AppOpts.IsValid(Component)
		? "rz-color-danger-light"
		: "";
}

<RadzenColumn Size="4">
	<RadzenStack Orientation="Orientation.Vertical" Gap="2">
		<RadzenLabel Text="@Text" Component="@SystemExtensions.GetMemberName(Component)" class="@LabelClass"/>

		@if (Subtext != null)
		{
			<p class="rz-color-base-500 rz-m-0">@Subtext</p>
		}
	</RadzenStack>
</RadzenColumn>