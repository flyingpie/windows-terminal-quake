@code {

	[Parameter]
	public string? Text { get; set; }

	[Parameter]
	public string? Component { get; set; }

	[Parameter]
	public bool IsOptional { get; set; }
}

<RadzenColumn Size="4" Class="rz-pt-2">
	<RadzenLabel Text="@Text" Component="@Component"/>

	@if (IsOptional)
	{
		<p class="rz-color-base-500 rz-m-0">optional</p>
	}
</RadzenColumn>