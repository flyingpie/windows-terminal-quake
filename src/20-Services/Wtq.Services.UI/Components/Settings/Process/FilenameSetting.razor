@inherits WtqSettingBase<string>

@inject IPlatformService Platform

@code {

	[Parameter]
	public string? WorkingDirectory { get; set; }

}

<WtqSetting TProperty="string" Get="Get" Set="Set">
	<Content>
		<RadzenTextBox @bind-Value="Value" style="width: 100%;" @oninput="@(i => Value = i.Value?.ToString() ?? string.Empty)" />

		@if (!string.IsNullOrWhiteSpace(Value))
		{
			@if (Platform.IsCallable(WorkingDirectory, Value))
			{
				<p class="rz-color-success-light rz-mt-1">File seems to exist!</p>
			}
			else
			{
				<p class="rz-color-danger-light rz-mt-1">File does NOT seem to exist!</p>
			}
		}
	</Content>
</WtqSetting>