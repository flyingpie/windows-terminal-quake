@inherits WtqSettingBase<TaskbarIconVisibility?>

@code {

	private TaskbarIconVisibility Val
	{
		get => Value ?? TaskbarIconVisibility.None;
		set => Value = value;
	}

}

<WtqSetting TProperty="TaskbarIconVisibility?" Get="Get" Set="Set" Default="Default">
	<Content>

		<RadzenRadioButtonList @bind-Value="Val" TValue="TaskbarIconVisibility" Orientation="Orientation.Vertical">
			<Items>
				<RadzenRadioButtonListItem	Value="TaskbarIconVisibility.AlwaysHidden"			Text="Always hidden"/>
				<RadzenRadioButtonListItem	Value="TaskbarIconVisibility.AlwaysVisible"			Text="Always visible"/>
				<RadzenRadioButtonListItem	Value="TaskbarIconVisibility.WhenAppVisible"		Text="When app visible"		Disabled="true"/>
			</Items>
		</RadzenRadioButtonList>

	</Content>
</WtqSetting>